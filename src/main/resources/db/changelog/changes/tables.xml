<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-laboratories-table" author="creator">
        <createTable tableName="laboratories">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="location" type="VARCHAR(255)"/>
            <column name="department" type="VARCHAR(255)"/>

            <column name="equipment_description" type="TEXT"/>
        </createTable>
    </changeSet>

    <changeSet id="create-researchers-table" author="creator">
        <createTable tableName="researchers">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="first_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="last_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="email" type="VARCHAR(255)">
                <constraints unique="true"/>
            </column>

            <column name="specialization" type="VARCHAR(255)"/>
            <column name="phone_number" type="VARCHAR(50)"/>
        </createTable>
    </changeSet>

    <changeSet id="create-experiments-table" author="creator">
        <createTable tableName="experiments">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="experiment_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="researcher_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="date" type="DATE">
                <constraints nullable="false"/>
            </column>

            <column name="reagents_used" type="TEXT"/>
            <column name="method" type="TEXT"/>
            <column name="result_summary" type="TEXT"/>

            <column name="laboratory_id" type="BIGINT"/>
        </createTable>
    </changeSet>

    <changeSet id="add-fk-experiments-laboratory" author="creator">
        <addForeignKeyConstraint
                baseTableName="experiments"
                baseColumnNames="laboratory_id"
                referencedTableName="laboratories"
                referencedColumnNames="id"
                constraintName="fk_experiments_laboratory"
                onDelete="RESTRICT"
                onUpdate="CASCADE"/>
    </changeSet>

    <changeSet id="create-experiment-researchers-table" author="creator">
        <createTable tableName="experiment_researchers">
            <column name="experiment_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="researcher_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey
                tableName="experiment_researchers"
                columnNames="experiment_id, researcher_id"
                constraintName="pk_experiment_researchers"/>
    </changeSet>

    <changeSet id="add-fk-exp_res-experiment" author="creator">
        <addForeignKeyConstraint
                baseTableName="experiment_researchers"
                baseColumnNames="experiment_id"
                referencedTableName="experiments"
                referencedColumnNames="id"
                constraintName="fk_exp_res_experiment"
                onDelete="CASCADE"
                onUpdate="CASCADE"/>
    </changeSet>

    <changeSet id="add-fk-exp_res-researcher" author="creator">
        <addForeignKeyConstraint
                baseTableName="experiment_researchers"
                baseColumnNames="researcher_id"
                referencedTableName="researchers"
                referencedColumnNames="id"
                constraintName="fk_exp_res_researcher"
                onDelete="CASCADE"
                onUpdate="CASCADE"/>
    </changeSet>

    <changeSet id="create-publications-table" author="creator">
        <createTable tableName="publications">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="journal" type="VARCHAR(255)"/>
            <column name="published_date" type="DATE"/>

            <column name="doi" type="VARCHAR(255)">
                <constraints unique="true"/>
            </column>

            <column name="experiment_id" type="BIGINT"/>
        </createTable>
    </changeSet>

    <changeSet id="add-fk-publications-experiment" author="creator">
        <addForeignKeyConstraint
                baseTableName="publications"
                baseColumnNames="experiment_id"
                referencedTableName="experiments"
                referencedColumnNames="id"
                constraintName="fk_publications_experiment"
                onDelete="RESTRICT"
                onUpdate="CASCADE"/>
    </changeSet>

    <changeSet id="create-equipment-table" author="creator">
        <createTable tableName="equipment">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="serial_number" type="VARCHAR(255)">
                <constraints unique="true"/>
            </column>

            <column name="purchase_date" type="DATE"/>
            <column name="status" type="VARCHAR(100)"/>

            <column name="laboratory_id" type="BIGINT"/>
        </createTable>
    </changeSet>

    <changeSet id="add-fk-equipment-laboratory" author="creator">
        <addForeignKeyConstraint
                baseTableName="equipment"
                baseColumnNames="laboratory_id"
                referencedTableName="laboratories"
                referencedColumnNames="id"
                constraintName="fk_equipment_laboratory"
                onDelete="RESTRICT"
                onUpdate="CASCADE"/>
    </changeSet>

</databaseChangeLog>
